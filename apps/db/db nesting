loginInfo: {
    userId - from users
    password
    token
}

users: {
    userId
    userBasicData: {
        username
        profileImage
    }
    additionalData: {
        name: {
            firstName
            lastName
        }
        email
        phone
        website
        bio
        gender
        followers: [
            userId - from users
        ]
        followings: [
            userId - from users
        ]
    }
    posts: {
        myPosts: [
            post - from posts
        ]
        tagged: [
            postId - from posts
        ]
        saved: [
            postId - from posts
        ]
    }
}

posts: {
    postId
    userId - from users
    text 
    [imageSrc] - from cloudinary?
    createdDate
    locations
    allowed comment (boolean)
    tags [
        tagName from tags?
    ]
    users`s tags [
        userId
    ]
    reactions: {
        likes: [
            userId - from users
        ]
        comments: [
            {
                userId - from users
                text
                createdTime
                likes: [
                    userId - from users
                ]
            }
        ]
    }
    // optionals: 
    //    comments to comments
}

tags: {
    tagCode (saved 1-1000, the rest for new tags of the users)
    tagName
    icon
}

